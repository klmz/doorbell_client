
{
  /* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
  "rules": {
    ".read": true,
    ".write": true,
    "users":{
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "doorbells": {
      "$doorbellId":{
        ".read":true,
        ".write": true,
        ".indexOn": "secret",
        "events":{
          "$eventId":{
            ".read": true,
            ".write": true,
            ".indexOn": ["payload/tag"]
          }
        }
      }
    }
  }
}